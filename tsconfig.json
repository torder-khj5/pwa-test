{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext", "WebWorker"],
    "module": "ESNext",
    "skipLibCheck": true,
    "jsxImportSource": "@emotion/react",

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "allowSyntheticDefaultImports": true, //pouch db
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    // "noUnusedLocals": true,
    // "noUnusedParameters": true,
    // "noFallthroughCasesInSwitch": true,

    /* Paths */
    "baseUrl": "./",
    "paths": {
      "@api": ["src/api"],
      "@api/*": ["src/api/*"],
      "@assets": ["src/assets"],
      "@assets/*": ["src/assets/*"],
      "@constants": ["src/constants"],
      "@constants/*": ["src/constants/*"],
      "@components": ["src/components"],
      "@components/*": ["src/components/*"],
      "@hooks": ["src/hooks"],
      "@hooks/*": ["src/hooks/*"],
      "@type": ["src/type"],
      "@type/*": ["src/type/*"],
      "@store": ["src/store"],
      "@store/*": ["src/store/*"],
      "@styles": ["src/styles"],
      "@styles/*": ["src/styles/*"],
      "@utils*": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@pages": ["src/pages"],
      "@pages/*": ["src/pages/*"],
      "@locales": ["src/locales"],
      "@locales/*": ["src/locales/*"],
      "@i18n": ["src/i18n"],
      "@i18n/*": ["src/i18n/*"],
      "@layout": ["src/layout"],
      "@layout/*": ["src/layout/*"]
    },
    "esModuleInterop": true,
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
